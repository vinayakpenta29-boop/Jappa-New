<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Dynamic Sales Table"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/salesmanNo"
                android:hint="Salesman No."
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_input"
                android:padding="12dp"
                android:layout_margin="4dp"/>

            <EditText
                android:id="@+id/barcode"
                android:hint="Barcode"
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_input"
                android:padding="12dp"
                android:layout_margin="4dp"/>

            <EditText
                android:id="@+id/millRate"
                android:hint="Mill Rate"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_input"
                android:padding="12dp"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <EditText
                android:id="@+id/billNo"
                android:hint="Bill No."
                android:inputType="number"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_input"
                android:padding="12dp"
                android:layout_margin="4dp"/>

            <!-- Date Box -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/dateText"
                    android:text="Tap to select date"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <EditText
                android:id="@+id/jappa"
                android:hint="Jappa (Amount)"
                android:inputType="numberDecimal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/curved_input"
                android:padding="12dp"
                android:layout_margin="4dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addBtn"
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="#CCCCCC"
            android:textColor="#333"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Switches -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp">

                <TextView
                    android:text="Show QR Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/qrSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Cut Off (28%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/cutoffSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <TableRow>
                    <TextView android:text="No." android:padding="8dp"/>
                    <TextView android:text="S. No." android:padding="8dp"/>
                    <TextView android:text="Barcode" android:padding="8dp"/>
                    <TextView android:text="Mill Rate" android:padding="8dp"/>
                    <TextView android:text="Bill No." android:padding="8dp"/>
                    <TextView android:text="Date" android:padding="8dp"/>
                    <TextView android:text="Jappa" android:padding="8dp"/>
                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/totalJappaText"
                        android:text="Total Jappa: 0"
                        android:padding="8dp"/>
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>

        <TextView
            android:id="@+id/cutoffJappaText"
            android:text="Cut Off Jappa"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <TextView
            android:id="@+id/balanceText"
            android:text="Balance Amt"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/lastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />
    </LinearLayout>
</ScrollView>
