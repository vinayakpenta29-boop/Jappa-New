<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title=""
            app:titleTextColor="#FFA500"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <TextView
            android:text=""
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"/>

                <!-- Row 1 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/SmallHintAppearance">

                <EditText
                    android:id="@+id/salesmanNo"
                    android:hint="Salesman No."
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/SmallHintAppearance">

                <EditText
                    android:id="@+id/barcode"
                    android:hint="Barcode"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/SmallHintAppearance">

                <EditText
                    android:id="@+id/millRate"
                    android:hint="Mill Rate"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/SmallHintAppearance">

                <EditText
                    android:id="@+id/billNo"
                    android:hint="Bill No."
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Date Box -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:text="Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/dateText"
                    android:text="Tap to select date"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"/>
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:hintTextAppearance="@style/SmallHintAppearance">

                <EditText
                    android:id="@+id/jappa"
                    android:hint="Jappa (Amount)"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/curved_input"
                    android:padding="12dp"
                    android:textSize="16sp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <Button
            android:id="@+id/addBtn"
            android:text="ADD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/curved_add_button"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Switches -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp">

                <TextView
                    android:text="Show QR Code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/qrSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Cut Off (28%)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Switch
                    android:id="@+id/cutoffSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <!-- Table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="*">

                <!-- Table header -->
                <TableRow>
                    <TextView android:text="No." android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                    <TextView android:text="S. No." android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                    <TextView android:text="Barcode" android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                    <TextView android:text="Mill Rate" android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                    <TextView android:text="Bill No." android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                    <TextView android:text="Date" android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                    <TextView android:text="Jappa" android:padding="8dp" android:textStyle="bold" android:textColor="#FFA500" android:background="@drawable/border_cell"/>
                </TableRow>

                <!-- Data rows will be added programmatically -->

                <!-- Total Jappa row -->
                <TableRow>
                    <TextView
                        android:layout_span="6"
                        android:text="Total Jappa:"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:background="@drawable/border_cell"
                        android:padding="8dp"/>
                    <TextView
                        android:id="@+id/totalJappaText"
                        android:text="0.00"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:background="@drawable/border_cell"
                        android:padding="8dp"/>
                </TableRow>
                <!-- Cut Off row -->
                <TableRow
                    android:id="@+id/cutoffRow"
                    android:visibility="gone">
                    <TextView
                        android:layout_span="6"
                        android:text="Cut Off Jappa (28%):"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:background="@drawable/border_cell"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/cutoffJappaText"
                        android:text="0.00"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:gravity="right"
                        android:background="@drawable/border_cell"
                        android:padding="8dp" />
                </TableRow>
                <!-- Balance row -->
                <TableRow
                    android:id="@+id/balanceRow"
                    android:visibility="gone">
                    <TextView
                        android:layout_span="6"
                        android:text="Balance Amount:"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:background="@drawable/border_cell"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/balanceText"
                        android:text="0.00"
                        android:gravity="right"
                        android:textStyle="bold"
                        android:textColor="#FFA500"
                        android:background="@drawable/border_cell"
                        android:padding="8dp" />
                </TableRow>
            </TableLayout>
        </HorizontalScrollView>

        <ImageView
            android:id="@+id/qrCodeImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/lastUpdated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#FFA500"
            android:layout_gravity="center"
            android:textSize="12sp" />

        <!-- SWIPE RESET BUTTON (MotionLayout, centered, NO LinearLayout wrapper) -->
        <androidx.constraintlayout.motion.widget.MotionLayout
               android:id="@+id/swipeMotionLayout"
               android:layout_width="220dp"
               android:layout_height="52dp"
               android:layout_gravity="center_horizontal"
               app:layoutDescription="@xml/swipe_scene"
               android:background="@drawable/swipe_bg"
               android:layout_marginTop="36dp"
               android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/swipeText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="RESET"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/swipeThumb"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:src="@drawable/ic_swipe_thumb"
                android:background="@drawable/swipe_thumb_bg"
                android:elevation="4dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.motion.widget.MotionLayout>

        <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Create by RP"
           android:textSize="8sp"
           android:textColor="#BBBBBB"
           android:gravity="center"
           android:layout_gravity="center_horizontal"
           android:layout_marginBottom="18dp"/>

    </LinearLayout>
</ScrollView>
